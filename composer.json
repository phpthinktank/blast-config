{
  "name": "blast/config",
  "description": "Framework agnostic configuration package",
  "minimum-stability": "dev",
  "keywords": [
    "blast",
    "configuration",
    "json",
    "php",
    "puliphp"
  ],
  "homepage": "https://github.com/phpthinktank/blast-config",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "mjls@web.de",
      "homepage": "http://www.marco-bunge.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "league/container": "~2.0",
    "blast/facades": "dev-master",
    "puli/repository": "^1.0",
    "symfony/filesystem": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*"
  },
  "autoload": {
    "psr-4": {
      "Blast\\Config\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blast\\Tests\\": "tests"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
